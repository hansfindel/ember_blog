<div class="row" style="margin-top:2px;"></div>
<div class="row">
	<div class="twelve columns">
		<nav class="top-bar blue-top-bar">
		  <ul class="title-area">
		  	<li class="name">
		  		<h1 class="title">Los Blogos</h1>
		  	</li> 
		  </ul>
		  <ul class="title-area right">
		  	{{#if EmberBlog.current_user }}
		    	<li class="name">{{#linkTo "blogs"}}Blogs{{/linkTo}}</li>
		    	<li class="name">{{#linkTo "users"}}Authors{{/linkTo}}</li>
		    	<li class="name"><a href="" {{action "log_out"}}>Log Out</a></li>
		    {{else}}
		    	<li class="name">{{#linkTo "log_in"}}Log In{{/linkTo}}</li>
		    {{/if}}
		  </ul>
		</nav>
		<hr>	
	</div>
</div>
<div class="row">
	<div class="twelve columns">
		<p>{{outlet}}</p>
	</div>
</div>

<div class="row footer">
	<div class="twelve columns">
		<hr>
		<div class="row">
			<div class="four columns">
			</div>
			<div class="four columns">
				<p>Read and leave your thoughts</p>
			</div>
			<div class="four columns">
			</div>
		</div>
	</div>
</div>