<ul class="blog_form" style="list-style:none;">
	<li>
	  	{{view Ember.TextField valueBinding="title" placeholder="Title"}}
	</li>
	<li>
	  	{{view Ember.TextField valueBinding="explanation" placeholder="Explanation"}}
	</li>
	<li>
	  	{{view Ember.TextArea valueBinding="description"  placeholder="Content"}}
	</li>
	<li>
		  <button type="submit" {{action "endUpdate" this}} class="button large expand">
		    {{#if id}}Update{{else}}Create{{/if}}
		  </button>
	</li>
</ul>